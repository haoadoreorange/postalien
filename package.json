{
    "name": "postwoman",
    "version": "0.8.0",
    "description": "NodeJS 14 app with Typescript",
    "keywords": [
        "postwoman"
    ],
    "main": "dist/index.js",
    "bin": "dist/index.js",
    "license": "MIT",
    "repository": "https://github.com/haoadoresorange/postwoman.git",
    "author": "haoadoresorange",
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "_postinstall": "husky install",
        "prepack": "pinst --disable && yarn build",
        "postpack": "pinst --enable",
        "build": "rimraf dist && gulp",
        "lint": "eslint '**/*.{js,ts}' --quiet --fix",
        "lint-staged": "lint-staged",
        "test": "yarn build && jest"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --quiet --fix"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "node_modules",
            "src"
        ]
    },
    "dependencies": {
        "inquirer": "^8.2.0",
        "json-bigint": "^1.0.0"
    },
    "devDependencies": {
        "@tsconfig/node14": "^1.0.1",
        "@types/inquirer": "^8.1.3",
        "@types/jest": "^26.0.23",
        "@types/json-bigint": "^1.0.1",
        "@types/node": "^14.14.37",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "gulp": "^4.0.2",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-strip-code": "^0.1.4",
        "gulp-typescript": "^6.0.0-alpha.1",
        "husky": "^7.0.4",
        "jest": "^27.0.4",
        "lint-staged": "^10.5.4",
        "pinst": "^2.1.6",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.2",
        "ttypescript": "^1.5.12",
        "typescript": "^4.2.4"
    },
    "dependenciesDescription": {
        "@tsconfig/node14": "Recommend tsconfig for node 14",
        "@typescript-eslint/eslint-plugin": "ESLint rules for TS",
        "eslint-config-prettier": "Turn off ESLint rules that conflict with Prettier",
        "eslint-plugin-prettier": "Run Prettier as ESLint rule (no need to run prettier command) and show errors as ESLint errors",
        "ts-jest": "Run Jest directly on TS"
    }
}
